---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
const { user } = Astro.locals;
const currentPath = Astro.url.pathname;
const isAuthPage = currentPath.startsWith("/auth/");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    data-test-id="app-shell"
    class={`bg-gradient-to-b from-slate-950 via-slate-900 to-slate-950 text-white min-h-screen overflow-y-auto`}
  >
    {
      user && !isAuthPage && (
        <nav
          data-test-id="layout-user-nav"
          class="fixed top-0 left-0 w-full border-b border-cyan-500/20 bg-gradient-to-r from-slate-950 via-slate-900 to-slate-950 backdrop-blur-md z-50"
        >
          <div
            data-test-id="layout-user-nav-inner"
            class="container mx-auto flex items-center justify-between px-4 py-4"
          >
            <p class="bg-gradient-to-r from-cyan-400 to-blue-400 bg-clip-text text-base font-semibold text-transparent">
              Witaj, {user.email}!
            </p>
            <div class="flex items-center gap-8">
              <nav class="flex items-center gap-6">
                <a
                  data-test-id="layout-home-link"
                  href="/"
                  class={`text-sm font-medium transition-all hover:text-cyan-300 ${
                    currentPath === "/" ? "text-cyan-400" : "text-white/90"
                  }`}
                >
                  Home
                </a>
                <a
                  data-test-id="layout-generate-link"
                  href="/generate"
                  class={`text-sm font-medium transition-all hover:text-cyan-300 ${
                    currentPath === "/generate"
                      ? "text-cyan-400"
                      : "text-white/90"
                  }`}
                >
                  Generuj
                </a>
                <a
                  data-test-id="layout-flashcards-link"
                  href="/flashcards"
                  class={`text-sm font-medium transition-all hover:text-cyan-300 ${
                    currentPath === "/flashcards"
                      ? "text-cyan-400"
                      : "text-white/90"
                  }`}
                >
                  Moje fiszki
                </a>
              </nav>
              <form
                data-test-id="layout-logout-form"
                action="/api/auth/logout"
                method="post"
              >
                <button
                  type="submit"
                  data-test-id="layout-logout-button"
                  class="cursor-pointer rounded-full bg-gradient-to-r from-cyan-500 via-blue-500 to-indigo-500 px-6 py-2 text-sm font-semibold text-white shadow-lg shadow-cyan-500/30 transition hover:translate-y-0.5"
                >
                  Wyloguj siÄ™
                </button>
              </form>
            </div>
          </div>
        </nav>
      )
    }
    <div
      data-test-id="layout-content"
      class={user && !isAuthPage ? "pt-16" : ""}
    >
      <slot />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
