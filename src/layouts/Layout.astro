---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
const { user } = Astro.locals;
const currentPath = Astro.url.pathname;
const isAuthPage = currentPath.startsWith("/auth/");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class={`bg-gradient-to-b from-slate-950 via-slate-900 to-slate-950 text-white ${user && !isAuthPage ? "pt-16" : ""} min-h-screen overflow-hidden`}
  >
    {
      user && !isAuthPage && (
        <nav class="fixed top-0 left-0 w-full border-b border-cyan-500/20 bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900 backdrop-blur-md z-50">
          <div class="container mx-auto flex items-center justify-between px-4 py-4">
            <p class="bg-gradient-to-r from-cyan-400 to-blue-400 bg-clip-text text-base font-semibold text-transparent">
              Witaj, {user.email}!
            </p>
            <form action="/api/auth/logout" method="post">
              <button
                type="submit"
                class="cursor-pointer rounded-full bg-gradient-to-r from-cyan-500 via-blue-500 to-indigo-500 px-6 py-2 text-sm font-semibold text-white transition hover:translate-y-0.5"
              >
                Wyloguj siÄ™
              </button>
            </form>
          </div>
        </nav>
      )
    }
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
