---
interface Highlight {
  title: string;
  description: string;
}

interface Props {
  eyebrow?: string;
  title: string;
  description: string;
  note?: string;
  highlights?: Highlight[];
}

const {
  eyebrow = "Bezpieczny dostep",
  title,
  description,
  note,
  highlights = [],
} = Astro.props;
---

<section
  data-test-id="auth-page"
  class="relative min-h-screen overflow-hidden bg-gradient-to-b from-slate-950 via-slate-900 to-slate-950 px-4 py-16 text-white"
>
  <div
    class="pointer-events-none absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(56,189,248,0.25),_transparent_55%)]"
    aria-hidden="true"
  >
  </div>
  <div class="relative mx-auto max-w-6xl">
    <div class="grid gap-12 lg:grid-cols-[1.1fr_0.9fr]">
      <div class="space-y-8">
        <p class="text-xs uppercase tracking-[0.5em] text-slate-400">
          {eyebrow}
        </p>
        <div class="space-y-4">
          <h1
            class="text-4xl font-semibold leading-tight text-white md:text-5xl"
          >
            {title}
          </h1>
          <p class="text-lg text-slate-300 md:text-xl">
            {description}
          </p>
        </div>

        {note && <p class="text-sm text-slate-400">{note}</p>}

        {
          highlights.length > 0 && (
            <dl
              class="grid gap-4 sm:grid-cols-2"
              data-test-id="auth-highlights"
            >
              {highlights.map((item) => (
                <div class="rounded-2xl border border-white/10 bg-white/5 p-5 backdrop-blur">
                  <dt class="text-xs uppercase tracking-[0.4em] text-slate-400">
                    {item.title}
                  </dt>
                  <dd class="mt-3 text-lg font-semibold text-white">
                    {item.description}
                  </dd>
                </div>
              ))}
            </dl>
          )
        }
      </div>

      <div
        data-test-id="auth-form-card"
        class="w-full max-w-md justify-self-center rounded-3xl border border-white/10 bg-slate-950/60 p-1.5 shadow-[0_20px_90px_rgba(8,47,73,0.65)] backdrop-blur"
      >
        <div class="rounded-[22px] bg-slate-950/80 p-10">
          <slot />
        </div>
      </div>
    </div>
  </div>
</section>
